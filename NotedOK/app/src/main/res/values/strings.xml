    <!-- Do not translate -->
    <string name="note_web_view_wrapping_html" translatable="false">
        <![CDATA[
        <html>
            <head>
                <style type="text/css">
                    * {
                        margin: 0;
                        padding: 0;
                    }

                    .note-outer {
                        margin: 16px;
                        padding: 8px 0px;
                    }

                    .note-title {
                        margin-top: 0px;
                        margin-bottom: 16px;
                        padding: 4px 8px 2px 8px;
                        outline: none;

                        font-size: large;
                        font-weight: 400;
                        font-family: "Segoe UI", arial, sans-serif;
                    }

                    .note-text {
                        padding: 4px 8px 2px 8px;
                        overflow-x: hidden;
                        overflow-y: auto;
                        white-space: pre-wrap;
                        text-overflow: ellipsis;
                        outline: none;

                        line-height: 1.5;
                        font-size: medium;
                        font-weight: 400;
                        font-family: monospace;
                    }

                    .codeblock
                    {
                        border: 1px dotted #a9a9a9;
                        padding: 12px;
                        font-size: medium;
                        font-family: monospace;
                        overflow-x: auto;
                        background: #fbfbfb;
                    }

                    div.note-text ul, div.note-text ol
                    {
                        white-space: normal;
                        list-style-position: inside;
                        display: inline-block;
                    }

                    .placeholder
                    {
                        color: #a9a9a9;
                    }
                </style>
            </head>
            <body>
                <div class=\'note-outer\'>
                    <div class=\'note-inner\'>
                        <div class=\'note-title\'>%1$s</div>
                        <div class=\'note-text\'>%2$s</div>
                    </div>
                </div>
            </body>
        </html>"
        ]]>
    </string>
