<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/cards_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/cards_padding">

        <TextView
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/note_title_padding"
            android:textSize="@dimen/note_title_text_size"
            android:fontFamily="roboto-medium"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:id="@+id/note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note_title"
            android:padding="@dimen/note_title_padding"
            android:textSize="@dimen/note_text_text_size"
            android:fontFamily="roboto-regular"
            android:textColor="@color/colorText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>