<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/note_title"
            android:hint="@string/note_no_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:textSize="@dimen/note_title_text_size"
            android:fontFamily="roboto-medium"
            android:textColor="@color/colorTitle"/>

        <View
            android:id="@+id/note_title_text_separator"
            android:layout_below="@+id/note_title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSeparator" />

        <TextView
            android:id="@+id/note_text"
            android:layout_below="@+id/note_title_text_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="5"
            android:scrollHorizontally="false"
            android:ellipsize="end"
            android:padding="16dp"
            android:textSize="@dimen/note_text_text_size"
            android:fontFamily="roboto-regular"
            android:textColor="@color/colorText"/>

        <!-- TODO: decide what to do with this -->
        <!--Button
            android:id="@+id/note_edit_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/note_text"
            android:text="@string/button_edit"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@color/colorPrimary"
            style="?borderlessButtonStyle" /-->

    </RelativeLayout>

</android.support.v7.widget.CardView>