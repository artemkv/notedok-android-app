<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailViewPageFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/note_view_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/note_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:textSize="@dimen/note_title_text_size"
                android:fontFamily="roboto-medium"
                android:textColor="@color/colorTitle"/>

            <TextView
                android:id="@+id/note_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_view_title"
                android:padding="16dp"
                android:textSize="@dimen/note_text_text_size"
                android:fontFamily="roboto-regular"
                android:textColor="@color/colorText"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
